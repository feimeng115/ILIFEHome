<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@drawable/shape_bg_round_radius"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cleaning_tag"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:src="@drawable/annal_icon_finish" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_date"
            style="@style/Text_18sp_33"
            android:text="06月11日" />

        <TextView
            android:layout_marginTop="@dimen/dp_3"
            android:id="@+id/tv_time"
            style="@style/Text_14sp_33"
            android:layout_below="@+id/tv_date"
            android:layout_alignStart="@+id/tv_date"
            android:text="17:17" />
    </RelativeLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_area"
                style="@style/Text_14sp_33"
                android:layout_centerHorizontal="true"
                android:text="68㎡" />

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                style="@style/Text_12sp_33"
                android:layout_below="@+id/tv_area"
                android:layout_centerHorizontal="true"
                android:text="@string/setting_aty_area" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:background="#FFE2E2E2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_duration"
                style="@style/Text_14sp_33"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:text="60min" />

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                style="@style/Text_12sp_33"
                android:layout_below="@+id/tv_duration"
                android:layout_centerHorizontal="true"
                android:text="@string/setting_aty_duration" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>