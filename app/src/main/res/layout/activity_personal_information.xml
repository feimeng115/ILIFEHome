<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24">

        <LinearLayout
            android:id="@+id/ll_user_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_16sp_33"
                android:text="头像" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n_icon_portrait" />

            <ImageView
                style="@style/Image_Style_Forward"
                android:layout_marginStart="@dimen/dp_8" />
        </LinearLayout>

        <View style="@style/View_Line_Style" />

        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_16sp_33"
                android:text="昵称" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                style="@style/Text_14sp_66"
                android:text="小小小"
                android:textStyle="bold" />

            <ImageView
                style="@style/Image_Style_Forward"
                android:layout_marginStart="@dimen/dp_8" />
        </LinearLayout>

        <View style="@style/View_Line_Style" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_16sp_33"
                android:text="账号" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                style="@style/Text_14sp_66"
                android:textColor="@color/color_c7c7c7"
                android:text="18589856969@169.com"
                android:textStyle="bold" />
        </LinearLayout>

        <View style="@style/View_Line_Style" />

    </LinearLayout>
</LinearLayout>